<h4 style="margin-left: 570px;"><i>Posts List</i> </h4><br>
<%= link_to 'New Post', new_post_path, class: 'new_class' %>
<%= link_to 'Back', welcome_index_path, class: 'link_class' %>
<div class="container">
  <div class="card bg-light">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Category</th>
          <th scope="col">Image</th>
          <th colspan = "4">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= post.category %></td>
          <td><%= image_tag post.image.url, class: 'image_box' %></td>
          <td><%= link_to 'show', post_path(post), :class => "btn btn-info btn-sm" %></td>
          <td><%= link_to 'edit', edit_post_path(post), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'delete', post_path(post), method: :delete, :class => "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'layouts/footer'%>
