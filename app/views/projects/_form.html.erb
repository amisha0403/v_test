<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Fonts -->
  <link rel="dns-prefetch" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">
  <link rel="icon" href="Favicon.png">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>

<main class="my-form">
  <div class="cotainer">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="nav-link scrollto" style="margin-left: 120px;"></i>logout
            <% end %>
          </div>
          <div class="card-body">
            <%= form_for @project do |f| %>
              <div class="form-group row">
                <%= f.label :name, class: "col-md-4 col-form-label text-md-right" %>
                <div class="col-md-6">
                  <%= f.text_field :name, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <%= f.label :client_name, class: "col-md-4 col-form-label text-md-right" %>
                <div class="col-md-6">
                  <%= f.text_field :client_name, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <%= f.label :technology_require, class: "col-md-4 col-form-label text-md-right" %>
                <div class="col-md-6">
                  <%= f.text_field :technology_require, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <%= f.label :start_date, class: "col-md-4 col-form-label text-md-right" %>
                <div class="col-md-6">
                  <%= f.date_select :start_date, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <%= f.label :end_date, class: "col-md-4 col-form-label text-md-right" %>
                <div class="col-md-6">
                  <%= f.date_select :end_date, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6 offset-md-4">
                <%= f.submit "submit", :class => "btn btn-primary" %>
                <%= link_to 'Back', projects_path, :class => "btn btn-primary btn-md link_to_button" %>
              </div>
            <%end%>
          </div>
        </div>
        </div>
      </div>
  </div>

</main>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
