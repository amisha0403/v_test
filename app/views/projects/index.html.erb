<h4 style="margin-left: 570px;"><i>Projects List</i> </h4><br>
<%= link_to 'New Project', new_project_path, class: 'new_class' %>
<%= link_to 'Back', welcome_index_path, class: 'link_class' %>
<div class="container">
  <div class="card bg-light">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Client Name</th>
          <th colspan = "3">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
        <tr>
          <td><%= project.id %></td>
          <td><%= project.name %></td>
          <td><%= project.client_name %></td>
          <td><%= link_to 'show', project_path(project), :class => "btn btn-info btn-sm" %></td>
          <td><%= link_to 'edit', edit_project_path(project), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'delete', project_path(project), method: :delete, :class => "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>
<%= render 'layouts/footer'%>
