<div class="container">
  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">Project</h4>
      
        <div class="form-group input-group">
          Project name - <%= @project.name %>
        </div>

        <div class="form-group input-group">
          Description - <%= @project.client_name %>
        </div> 

        <div class="form-group input-group">
          Start Time - <%= @project.start_date %>
        </div> 

        <div class="form-group input-group">
          End Time - <%= @project.end_date%>
        </div>

        <div class="form-group input-group">
          Status - <%= @project.technology_require %>
        </div> 

        <div class="form-group">
          <%= link_to 'Edit', edit_project_path(@project), :class => "btn btn-primary btn-md link_to_button" %>
          <%= link_to 'Back', projects_path, :class => "btn btn-primary btn-md link_to_button" %>
        </div>       
      
    </article>
  </div>
</div>
<%= render 'layouts/footer'%>
