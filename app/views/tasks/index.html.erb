<h4 style="margin-left: 570px;"><i>Tasks List</i> </h4><br>
<%= link_to 'New Task', new_task_path, class: 'new_class' %>
<%= link_to 'Back', welcome_index_path, class: 'link_class' %>
<div class="container">
  <div class="card bg-light">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Project Name</th>
          <th scope="col">Description</th>
          <th colspan = "3">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.name %></td>
          <td><%= task.project&.name %></td>
          <td><%= task.description %></td>
          <td><%= link_to 'show', task_path(task), :class => "btn btn-info btn-sm" %></td>
          <td><%= link_to 'edit', edit_task_path(task), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'delete', task_path(task), method: :delete, :class => "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'layouts/footer'%>
